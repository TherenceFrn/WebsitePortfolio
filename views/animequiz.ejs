<body>
    
    <!-- MENU NAV -->
   <%- include('nav.ejs') %>

   <!-- OVERLAY -->
   <%- include('overlay.ejs') %>

   <!-- GRID -->
   <%- include('grid.ejs') %>
    
    <!-- LANDING -->
    <section class="landing">
        <div class="container">
            <div class="row">
                <div class="col-12 pageLanding">
                    <h1 class="title title-h1 text-center text-sm-left">
                        <span class="text-wrapper">
                            <span class="letters">
                                <%= pageData.title %>
                            </span>
                        </span>
                    </h1>
                    <div class="vitrine">
                        <img src="static/galery/1614416127742.jpg" alt="">
                    </div>
                    <div class="blocs">
                        <div class="line">
                            <div class="bloc"></div>
                            <div class="bloc"></div>
                            <div class="bloc"></div>
                            <div class="bloc"></div>
                            <div class="bloc"></div>
                        </div>
                        <div class="line">
                            <div class="bloc"></div>
                            <div class="bloc"></div>
                            <div class="bloc"></div>
                            <div class="bloc"></div>
                            <div class="bloc"></div>
                        </div>
                        <div class="line">
                            <div class="bloc"></div>
                            <div class="bloc"></div>
                            <div class="bloc"></div>
                            <div class="bloc"></div>
                            <div class="bloc"></div>
                        </div>
                        <div class="line">
